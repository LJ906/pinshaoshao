/* pages/category/category.wxss */
.section_title {
  position: relative;
  margin-bottom: 20rpx; 
  padding-left: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 10rpx;
  background-color: #fafafa;
}
.section_title icon {
  position: absolute;
  left: 120rpx;
  top: 20rpx;  
}

.section_title input {
  width: 90%;
  height: 88rpx;  
}
/* 分类 */
.category-content {
  display: flex;
}

.category-left {
  width: 160rpx; 
  margin-right: 1px;

  
}
.category-right {
  flex: 1;
}
 
.category-left  .ul-li {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 88rpx;
  border-bottom: 1px solid #ebeef5;
  border-right: 1px solid red;
  background-color:#fafafa;
  font-weight: lighter;
  font-size: 28rpx;
  color: #666666;
}

/* 选中样式 */

.category-left  .current {
  color: #e02e24;
}
.category-left  .current::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 88rpx;
  background-color: #e02e24;
} 

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/* 右边列表 */
.ul-list-right-list {
  padding-left: 6rpx;
}
.ul-li-right .right-title{
  display: flex;
  height: 60rpx;
}
  

